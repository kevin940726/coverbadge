{
  "name": "coverbadge",
  "version": "0.5.1",
  "description": "Create a coverage badge without any service provider.",
  "main": "index.js",
  "bin": {
    "coverbadge": "./bin/coverbadge.js"
  },
  "repository": "https://github.com/kevin940726/coverbadge",
  "author": "Kai Hao",
  "license": "MIT",
  "scripts": {
    "pretest": "rm -rf coverage",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "coverbadge": "cat coverage/lcov.info | node bin/coverbadge.js -o coverage/badge.svg"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**"
    ]
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "cheerio": "^1.0.0-rc.1",
    "isomorphic-fetch": "^2.2.1",
    "lcov-parse": "^0.0.10",
    "lodash.get": "^4.4.2",
    "mkdirp": "^0.5.1",
    "shields-lightweight": "^0.1.0",
    "yargs": "^8.0.1"
  },
  "devDependencies": {
    "babel-jest": "^20.0.3",
    "babel-preset-env": "^1.5.2",
    "jest": "^20.0.4"
  }
}
